<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:contentDescription="@string/imagem_do_time_de_casa"
            android:id="@+id/imgHomeTeam"
            android:layout_width="@dimen/team_img_size"
            android:layout_height="@dimen/team_img_size"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHomeTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgHomeTeam"
            app:layout_constraintStart_toStartOf="@+id/imgHomeTeam"
            app:layout_constraintTop_toBottomOf="@+id/imgHomeTeam"
            tools:text="Home Team" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHomeTeamScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="99"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/imgHomeTeam"
            app:layout_constraintEnd_toStartOf="@+id/tvX"
            app:layout_constraintStart_toEndOf="@+id/imgHomeTeam"
            app:layout_constraintTop_toTopOf="@+id/imgHomeTeam" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/imgHomeTeam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgHomeTeam" />

        <androidx.appcompat.widget.AppCompatImageView
            android:contentDescription="@string/time_inimigo"
            android:id="@+id/imgEnemyTeam"
            android:layout_width="@dimen/team_img_size"
            android:layout_height="@dimen/team_img_size"
            android:layout_marginEnd="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/imgHomeTeam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgHomeTeam"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEnemyTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Away Team"
            app:layout_constraintBottom_toBottomOf="@+id/tvHomeTeamName"
            app:layout_constraintEnd_toEndOf="@+id/imgEnemyTeam"
            app:layout_constraintStart_toStartOf="@+id/imgEnemyTeam"
            app:layout_constraintTop_toTopOf="@+id/tvHomeTeamName" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEnemyScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="99"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/imgEnemyTeam"
            app:layout_constraintEnd_toStartOf="@+id/imgEnemyTeam"
            app:layout_constraintStart_toEndOf="@+id/tvX"
            app:layout_constraintTop_toTopOf="@+id/imgEnemyTeam" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>